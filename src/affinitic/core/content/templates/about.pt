<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/main_template/macros/master">
    <head></head>

    <metal:main fill-slot="main">
    <div class="article">
        <h1 tal:content="context/title"></h1>
        <div class="content">
            <div class="article-image"
                 tal:attributes="style string:background-image:url(${context/absolute_url}/@@images/article_image/mini)">
            </div>
            <div class="article-content">
                <h2>Introduction</h2>
                <div tal:content="context/description" tal:condition="context/description"></div>
            </div>
        </div>
    </div>

    <tal:documents tal:define="documents view/documents;">
    <tal:document tal:repeat="document documents" tal:condition="documents">
    <tal:index define="index repeat/document/index">
    <div tal:condition="python: index%2!=0" class="article">
        <div class="content">
            <div class="article-image"
                 tal:attributes="style string:background-image:url(${document/absolute_url}/@@images/article_image/mini)">
            </div>
            <div class="article-content">
                <h2 tal:content="document/title"></h2>
                <div tal:content="document/description"></div>
            </div>
        </div>
        <div class="content">
            <div tal:content="structure document/text/output" tal:condition="document/text"></div>
        </div>
    </div>
    <div tal:condition="python: index%2==0" class="article transparent">
        <div class="content">
            <div class="article-content">
                <h2 tal:content="document/title"></h2>
                <div tal:content="document/description"></div>
            </div>
            <div class="article-image"
                 tal:attributes="style string:background-image:url(${document/absolute_url}/@@images/article_image/mini)">
            </div>
        </div>
        <div class="content">
            <div tal:content="structure document/text/output" tal:condition="document/text"></div>
        </div>
    </div>
    </tal:index>
    </tal:document>
    </tal:documents>

    <div class="article" tal:define="team view/team;" tal:condition="team">
        <h1>Notre Ã©quipe</h1>
        <div class="content">
            <div id="carousel-thumb" class="carousel slide carousel-thumbnails member-about" data-ride="carousel">
                <div class="carousel-header">
                    <div class="carousel-inner">
                        <tal:member tal:repeat="member team" tal:condition="team">
                        <tal:index define="index repeat/member/index;">
                        <div tal:attributes="class python:'carousel-item active' if index==0 else 'carousel-item';">
                            <a href="#" tal:attributes="href string:${portal_url}/@@member_view?member=${member/username}">
                                <div class="image">
                                    <div class="image-background member" tal:condition="not:member/portrait"></div>
                                    <div tal:attributes="class string:image-background member;
                                    style string:background-image:url(${member/portrait})"
                                         tal:condition="member/portrait"></div>
                                </div>
                                <div class="text">
                                    <div  class="name" tal:content="member/fullname" tal:condition="member/fullname"></div>
                                    <div class="function" tal:content="member/function" tal:condition="member/function"></div>
                                </div>
                            </a>
                        </div>
                        </tal:index>
                        </tal:member>
                    </div>
                    <tal:multiple tal:condition="python: len(team) > 1">
                    <a class="carousel-control-prev" href="#carousel-thumb" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel-thumb" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                    </tal:multiple>
                </div>
                <tal:multiple tal:condition="python: len(team) > 1">
                <ol class="carousel-indicators">
                    <tal:member tal:repeat="member team" tal:condition="team">
                    <tal:index define="index repeat/member/index;">
                    <li data-target="#carousel-thumb" tal:attributes="data-slide-to index">
                        <div class="image-background small circle" tal:condition="not:member/portrait"></div>
                        <div tal:attributes="class string:image-background small circle;
                        style string:background-image:url(${member/portrait})" tal:condition="member/portrait"></div>
                    </li>
                    </tal:index>
                    </tal:member>
                </ol>
                </tal:multiple>
            </div>
        </div>
    </div>
    </metal:main>
</html>
