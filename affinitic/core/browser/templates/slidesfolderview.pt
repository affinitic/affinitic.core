<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
    <head></head>
    <body>
        <div metal:fill-slot="content-title"> </div>
        <div metal:fill-slot="content-description"> </div>
        <div metal:fill-slot="content-core">
            <tal:results define="results python:context.results();">
                <div id="slides_home">
                    <tal:bcl tal:repeat="brain results">
                        <article class="tileItem">
                            <tal:item define="obj brain/getObject">
                            <a tal:attributes="href string:${obj/absolute_url}">
                                <div class="contentItem">
                                    <h1>
                                        <span tal:content="brain/Title" />
                                    </h1>
                                    <div class="tileBody">
                                        <span tal:content="brain/description" />
                                    </div>
                                    <div class="tileFooter">
                                            Lire la suiteâ€¦
                                    </div>
                                </div>
                            </a>
                            <div class="tileImage Front" tal:attributes="style string:background-image:url(${obj/absolute_url}/@@images/parallax_front/large)">
                            </div>
                            <div class="tileImage Back" tal:attributes="style string:background-image:url(${obj/absolute_url}/@@images/parallax_back/large)">
                            </div>
                            </tal:item>
                        </article>
                    </tal:bcl>
                </div>
            </tal:results>
            <div id="clear"></div>
         </div>
    </body>
</html>
