<html xmlns="http://www.w3.org/1999/xhtml"
      metal:use-macro="here/main_template/macros/master">
    <head>
    </head>
    <body>
        <div metal:fill-slot="content-core"
      id="client-listing-wrapper"
      tal:define="services view/getServices">
            <tal:bcl tal:repeat="service services">
                <article class="tileItem">
                    <a tal:attributes="href string:${service/absolute_url}">
                        <div class="contentItem">
                            <div class="tileHeader">
                                <div class="tileImage" tal:attributes="style string:background-image:url(${service/absolute_url}/@@images/photo)">
                                </div>
                                <h2 tal:content="service/Title"/>
                            </div>
                            <div class="tileBody" tal:content="service/Description"></div>
                            <div class="tileFooter">
                                En savoir plusâ€¦
                            </div>
                        </div>
                    </a>
                </article>
            </tal:bcl>
            <div id="clear"></div>
        </div>
    </body>
</html>
