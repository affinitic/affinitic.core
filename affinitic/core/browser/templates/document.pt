<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
    <body>
        <div metal:fill-slot="main" id="view_document">
            <div class='parallax'>
                <div class="group">
                    <div class="background before">
                    </div>
                    <div class="background"
                         tal:define="background_filename context/background1/filename | nothing"
                         tal:attributes="style string: background-image:url(${context/absolute_url}/@@download/background1/${background_filename})">
                    </div>
                    <div class="foreground">
                            <tal:image tal:define="image nocall:context/image"
                                 tal:condition="nocall:image">
                            <div class="image" tal:attributes="style string: background-image:url(${context/absolute_url}/@@download/image/${image/filename})"></div>
                            </tal:image>
                        <h1 tal:content="context/title"></h1>
                        <h2 tal:content="context/description"></h2>
                        <div tal:replace="structure context/text/raw"></div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
