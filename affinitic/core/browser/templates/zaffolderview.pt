<html xmlns="http://www.w3.org/1999/xhtml"
      metal:use-macro="here/main_template/macros/master">
  <body>
    <div metal:fill-slot="content-core"
         tal:define="zafs view/getZafs">
        <tal:bcl tal:repeat="zaf zafs">
            <a tal:attributes="href string:${zaf/absolute_url}">
                <article class="tileItem">
                    <div class="tileImage" tal:attributes="style string:background-image:url(${zaf/absolute_url}/@@images/photo/thumb)">
                    </div>
                    <h2 class="tileHeadline" tal:content="zaf/name">
                    </h2>
                    <div class="tileBody">
                        <span tal:replace="zaf/fonction"/>
                    </div>
                    <div class="tileMail" tal:define="email zaf/email">
                        <a href="" tal:attributes="href string:mailto:${email}">
                            <span tal:replace="email"/>
                        </a>
                    </div>
                    <div class="tileFooter">
                        Lire la suiteâ€¦
                    </div>
                    <div class="visualClear"><!-- --></div>
                </article>
            </a>
        </tal:bcl>
    </div>
  </body>
</html>
