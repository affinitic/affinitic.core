<html xmlns="http://www.w3.org/1999/xhtml"
      metal:use-macro="here/main_template/macros/master">
  <body>
    <div metal:fill-slot="content-core"
         tal:define="zafs view/getZafs">
        <tal:bcl tal:repeat="zaf zafs">
            <a tal:attributes="href string:${zaf/absolute_url}"
               tal:content="zaf/name" />
            <br />
            <span tal:replace="zaf/email"/>
            <br />
            <span tal:replace="zaf/fonction"/>
            <br />
            <img tal:attributes="src string:${zaf/absolute_url}/@@images/photo/preview"/>
        </tal:bcl>
    </div>
  </body>
</html>
