<html xmlns="http://www.w3.org/1999/xhtml"
      metal:use-macro="here/main_template/macros/master">
  <body>
    <div metal:fill-slot="content-core" id="view_team_folder" tal:define="list view/getZafs">
        <ul id="slider_team_folder">
        <tal:bcl tal:repeat="context list">
        <li class="tileItem" tal:attributes="data-thumb string:${context/absolute_url}/@@images/photo/large">
            <div class="team-photo image mini" tal:attributes="style string:background-image:url(${context/absolute_url}/@@images/photo/large)">
            </div>
            <div class="team-name" tal:content="context/name">
            </div>
            <div class="team-description">
                <span tal:replace="context/fonction"/>
            </div>
        </li>
        </tal:bcl>
        </ul>
    </div>
  </body>
</html>
