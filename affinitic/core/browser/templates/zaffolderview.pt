<html xmlns="http://www.w3.org/1999/xhtml"
      metal:use-macro="here/main_template/macros/master">
  <body>
    <div metal:fill-slot="content-core"
         tal:define="zafs view/getZafs">
        <div class="intro">
            Texte en dur dans la template
        </div>
        <tal:bcl tal:repeat="zaf zafs">
                <article class="tileItem">
                    <a tal:attributes="href string:${zaf/absolute_url}">
                        <div class="tileImage" tal:attributes="style string:background-image:url(${zaf/absolute_url}/@@images/photo/large)">
                        </div>
                        <h2 class="tileHeadline" tal:content="zaf/name">
                        </h2>
                        <div class="tileBody">
                            <div tal:replace="zaf/fonction"></div>
                            <div class="mail">
                                <span tal:replace="email" tal:define="email zaf/email" tal:condition="email"/>
                            </div>
                        </div>
                        <div class="tileFooter">
                            Voir le cv...
                        </div>
                    </a>
                </article>
        </tal:bcl>
        <div id="clear"></div>
    </div>
  </body>
</html>
