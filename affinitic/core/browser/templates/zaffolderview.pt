<html xmlns="http://www.w3.org/1999/xhtml"
      metal:use-macro="here/main_template/macros/master">
  <body>
    <div metal:fill-slot="content-core" id="vignette" class="carte" tal:define="list view/getZafs">
        <tal:bcl tal:repeat="context list">
        <a tal:attributes="href string:${context/absolute_url}">
            <article class="tileItem">
                <h2 class="tileHeadline" tal:content="context/name">
                </h2>
                <div class="tileImage" tal:attributes="style string:background-image:url(${context/absolute_url}/@@images/photo/large)">
                </div>
                <div class="tileBody">
                    <div class="description">
                        <span tal:replace="context/fonction"/>
                    </div>
                </div>
                <div class="tileFooter">
                    +
                </div>
            </article>
        </a>
        </tal:bcl>
        <div id="clear"></div>
    </div>
  </body>
</html>
