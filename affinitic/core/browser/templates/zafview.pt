<html xmlns="http://www.w3.org/1999/xhtml"
      metal:use-macro="here/main_template/macros/master">
  <body>
    <div metal:fill-slot="content-core">
        <a tal:attributes="href string:${context/absolute_url}"
           tal:content="context/name" />
        <br />
        <span tal:replace="context/email"/>
        <br />
        <span tal:replace="context/fonction"/>
        <br />
        <img tal:attributes="src string:${context/absolute_url}/@@images/photo/preview"/>
        <br />
        <span tal:replace="context/engagement_date"/>
        <br />
        <span tal:replace="context/github"/>
        <br />
        <span tal:replace="context/twitter"/>
        <br />
        <span tal:replace="structure context/text/output"/>
    </div>
  </body>
</html>
