<html xmlns="http://www.w3.org/1999/xhtml"
      metal:use-macro="here/main_template/macros/master">
    <head>
    </head>
    <body>
        <div metal:fill-slot="main">
            <article id="zaf-boyz-description">
                <div class="tileImage" tal:attributes="style string:background-image:url(${context/absolute_url}/@@images/photo/mini)">
                </div>
                <h1 class="documentFirstHeading" tal:content="context/name"></h1>
                <h2>
                    <span tal:replace="context/fonction" class="fonction"></span>
                </h2>
                <span class="date">
                    Depuis le <span tal:replace="python: context.engagement_date.strftime('%d/%m/%Y')"></span>
                </span>
                <div id="description">
                    <div id="contact">
                        <h3>Contact</h3>
                        <ul>
                            <li tal:define="email context/email">
                                Email :
                                <a tal:attributes="href string:mailto:${email}">
                                    <span tal:replace="email"/>
                                </a>
                            </li>
                            <li tal:define="account context/github"
                         tal:condition="account">
                                GitHub :
                                <a tal:attributes="href string:https://github.com/${account}">
                                    <span tal:replace="account"/>
                                </a>
                            </li>
                            <li tal:define="account context/twitter"
                         tal:condition="account">
                                Twitter :
                                <a tal:attributes="href string:https://twitter.com/${account}">
                                    <span tal:replace="account"/>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div id="experience">
                        <h3>Exp√©rience</h3>
                        <span tal:replace="structure context/text/output"/>
                    </div>
                </div>
            </article>
        </div>
    </body>
</html>
