<html xmlns="http://www.w3.org/1999/xhtml"
      metal:use-macro="here/main_template/macros/master">
  <body>
    <div metal:fill-slot="main">
        <article id="zaf-boyz-description">
            <h1 class="documentFirstHeading"
                tal:content="context/name"></h1>
            <img tal:attributes="src string:${context/absolute_url}/@@images/photo/mini"/>

            <section>
                <h3>Fonction</h3>
                <span tal:replace="context/fonction"/>
                <br />
                Depuis le <span tal:replace="python: context.engagement_date.strftime('%d/%m/%Y')"/>
            </section>

            <section>
                <h3>Contact</h3>
                <ul>
                    <li tal:define="email context/email">
                        Email :
	                    <a href=""
	                       tal:attributes="href string:mailto:${email}">
                           <span tal:replace="email"/>
                        </a>
                    </li>
                    <li tal:define="account context/github"
                        tal:condition="account">
                        GitHub :
	                    <a href=""
	                       tal:attributes="href string:https://github.com/${account}">
                           <span tal:replace="account"/>
                        </a>
                    </li>
                    <li tal:define="account context/twitter"
                        tal:condition="account">
                        Twitter :
	                    <a href=""
	                       tal:attributes="href string:https://twitter.com/${account}">
                            <span tal:replace="account"/>
                        </a>
                    </li>
                </ul>
            </section>

            <section>
                <h3>Exp√©rience</h3>
                <span tal:replace="structure context/text/output"/>
            </section>
        </article>
    </div>
  </body>
</html>
