<html xmlns="http://www.w3.org/1999/xhtml"
      metal:use-macro="here/main_template/macros/master">
    <head>
    </head>
    <body>
        <div metal:fill-slot="main" id="cv">
            <article>
                <header>
                    <h2 tal:content="context/name">
                    </h2>
                    <div class="txt" tal:content="context/fonction">
                    </div>
                    <span class="timbre_img" tal:attributes="style string:background-image:url(${context/absolute_url}/@@images/photo/large)" />
                </header>
                <div class="column_30 left">
                    <h2>Contact</h2>
                    <a tal:attributes="href string:mailto:${email}" tal:define="email context/email" tal:condition="email" target="_blank">
                        <div class="icone mail">
                            <span tal:replace="email" />
                        </div>
                    </a>
                    <h2>Follow</h2>
                    <a tal:attributes="href string:https://github.com/${twitter}" tal:define="twitter context/twitter" tal:condition="twitter" target="_blank">
                        <div class="icone twitter">
                        </div>
                    </a>
                    <a tal:attributes="href string:https://github.com/${github}" tal:define="github context/github" tal:condition="github" target="_blank">
                        <div class="icone github">
                        </div>
                    </a>
                </div>

                <div class="column_70 left">
                    <div class="txt">
                        <h2>Exp√©rience</h2>
                        <span tal:replace="structure context/text/output"/>
                    </div>
                </div>
            </article>
            <div id=clear></div>
        </div>
    </body>
</html>
