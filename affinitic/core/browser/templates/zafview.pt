<html xmlns="http://www.w3.org/1999/xhtml"
      metal:use-macro="here/main_template/macros/master">
  <body>
    <div metal:fill-slot="main">
        <article class="zaf-boyz-description">
            <h1>
                <span tal:content="context/name" />
            </h1>
            <img tal:attributes="src string:${context/absolute_url}/@@images/photo/mini"/>

            <section>
                <h3>Fonction</h3>
                <span tal:replace="context/fonction"/>
            </section>

            <section>
                <h3>Chez Affinitic depuis</h3>
                <span tal:replace="context/engagement_date"/>
            </section>

            <section>
                <h3>Contact</h3>
                <ul>
                    <li>Email :<span tal:replace="context/email"/></li>
                    <li>GitHub : <span tal:replace="context/github"/></li>
                    <li>Twitter : <span tal:replace="context/twitter"/></li>
                </ul>
            </section>

            <section>
                <h3>Description</h3>
                <span tal:replace="structure context/text/output"/>
            </section>
        </article>
    </div>
  </body>
</html>
