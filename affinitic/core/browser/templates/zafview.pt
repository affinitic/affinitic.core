<html xmlns="http://www.w3.org/1999/xhtml"
      metal:use-macro="here/main_template/macros/master">
    <head>
    </head>
    <body>
        <div metal:fill-slot="main">
            <header>
                <div class="title">
                    <div class="tileImage" tal:attributes="style string:background-image:url(${context/absolute_url}/@@images/photo/mini)">
                    </div>
                    <h2 tal:content="context/name"></h2>
                    <span tal:replace="context/fonction" class="fonction"></span>
                    <div class="date">
                        Depuis le <span tal:replace="python: context.engagement_date.strftime('%d/%m/%Y')"></span>
                    </div>
                </div>

            </header>
            <div id="description">
                <div id="description_left">
                    <h2>Contact</h2>
                    <a tal:attributes="href string:mailto:${email}" tal:define="email context/email" tal:condition="email">
                        <div class="img mail">
                            <span tal:replace="email" />
                        </div>
                    </a>
                    <a  tal:attributes="href string:https://twitter.com/${twitter}"  tal:define="twitter context/twitter" tal:condition="twitter">
                        <div class="img twitter">
                        </div>
                    </a>
                    <a tal:attributes="href string:https://github.com/${github}" tal:define="github context/github" tal:condition="github">
                        <div class="img github">
                        </div>
                    </a>
                </div>
                <div id="description_right">
                    <h2>Exp√©rience</h2>
                    <span tal:replace="structure context/text/output"/>
                </div>
            </div>
        </div>
    </body>
</html>
