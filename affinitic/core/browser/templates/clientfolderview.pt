<html xmlns="http://www.w3.org/1999/xhtml"
      metal:use-macro="here/main_template/macros/master">
    <head>
    </head>
    <body>
        <div metal:fill-slot="content-core" id="vignette" tal:define="list view/getClients">
            <tal:bcl tal:repeat="context list">
            <a tal:attributes="href string:${context/absolute_url}">
                <article class="tileItem">
                    <h2 class="tileHeadline" tal:content="context/nom">
                    </h2>
                    <div class="tileImage" tal:attributes="style string:background-image:url(${context/absolute_url}/@@images/capture/large)">
                    </div>
                    <div class="tileBody">
                        <div class="description">
                            <span tal:replace="structure context/description" />
                        </div>
                        <div>
                            <span class="icone webdesign" tal:condition="context/webdesign" />
                            <span class="icone developpement" tal:condition="context/developpement" />
                            <span class="icone hebergement" tal:condition="context/hebergement" />
                            <span class="icone coaching" tal:condition="context/coaching" />
                        </div>
                    </div>
                    <div class="tileFooter">
                        Lire la suiteâ€¦
                    </div>
                </article>
            </a>
            </tal:bcl>
        </div>
    </body>
</html>
