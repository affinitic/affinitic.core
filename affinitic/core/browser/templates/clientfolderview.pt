<html xmlns="http://www.w3.org/1999/xhtml"
      metal:use-macro="here/main_template/macros/master">
  <body>
    <div metal:fill-slot="content-core"
         tal:define="clients view/getClients">
        <tal:bcl tal:repeat="client clients">
            <a tal:attributes="href string:${client/absolute_url}"
               tal:content="client/nom" />
            <br />
            <span tal:replace="client/url"/>
            <br />
            <img tal:attributes="src string:${client/absolute_url}/@@images/capture/preview"/>
        </tal:bcl>
    </div>
  </body>
</html>
