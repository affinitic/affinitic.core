<html xmlns="http://www.w3.org/1999/xhtml"
      metal:use-macro="here/main_template/macros/master">
<body>
    <div metal:fill-slot="content-core"
         tal:define="clients view/getClients">
        <tal:bcl tal:repeat="client clients">
            <article class="client-listing">
                <section>
                    <a tal:attributes="href string:${client/absolute_url}"
                       tal:content="client/nom" />
                </section>
                <section>
                    <a href=""
                       target="_blanck"
                       tal:attributes="href client/url">
                        <img tal:attributes="src string:${client/absolute_url}/@@images/capture/mini"/></a>
                </section>
            </article>
            <tal:block tal:condition="repeat/client/odd">
                <div class="break-float"></div>
            </tal:block>
        </tal:bcl>
    </div>
</body>
</html>
