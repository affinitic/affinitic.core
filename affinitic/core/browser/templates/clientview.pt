<html xmlns="http://www.w3.org/1999/xhtml"
      metal:use-macro="here/main_template/macros/master">
    <body>
        <div metal:fill-slot="main" class="client-view">
            <article>
                <header>
                    <div  tal:define="testimonial context/testimonial" tal:condition="testimonial">
                        <span tal:content="structure testimonial/output" class="citation">Citation</span>
                    </div>
                    <div tal:define="author context/author" tal:condition="author" tal:content="author" class="author">
                    </div>
                </header>
                <section>
                    <div>
                        <div class="column_img" tal:attributes="style string:background-image:url(${context/absolute_url}/@@images/capture/large)">
                        </div>
                        <div>
                            <div class="title">
                                A propos du projet
                            </div>
                            <span tal:replace="structure context/texte/output"/>
                        </div>
                    </div>
                    <div>
                        <div>
                            <span class="fa-stack fa-lg icon">
                                <i class="fa fa-circle fa-stack-2x"></i>
                                <i class="fa fa-user fa-stack-1x fa-inverse"></i>
                            </span>
                            <span class="title">
                                Le client
                            </span>
                            <div class="text" tal:content="context/nom"></div>
                        </div>
                        <div>
                            <span class="fa-stack fa-lg icon">
                                <i class="fa fa-circle fa-stack-2x"></i>
                                <i class="fa fa-tasks fa-stack-1x fa-inverse"></i>
                            </span>
                            <span class="title">
                                Notre t√¢che
                            </span>
                            <div class="text" tal:content="context/description"></div>
                        </div>
                        <div >
                            <span class="fa-stack fa-lg icon">
                                <i class="fa fa-circle fa-stack-2x"></i>
                                <i class="fa fa-link fa-stack-1x fa-inverse"></i>
                            </span>
                            <span class="title">
                                Leur site web
                            </span>
                            <a href="" tal:attributes="href context/url" target="_blank">
                                <div class="text" tal:content="context/url"></div>
                            </a>
                        </div>
                        <div>
                            <span class="fa-stack fa-lg icon">
                                <i class="fa fa-circle fa-stack-2x"></i>
                                <i class="fa fa-facebook fa-stack-1x fa-inverse"></i>
                            </span>
                            <span class="title">
                                En chiffre
                            </span>
                            <div>
                                <div tal:content="context/nbr" class="text" />
                                    <hr>
                                    <div tal:content="context/type" />
                            </div>
                        </div>
                        <div>
                            <div class="title">Services</div>
                            <span tal:define="service context/webdesign" tal:condition="service">
                                <span class="fa-stack fa-lg icon">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-desktop fa-stack-1x fa-inverse"></i>
                                </span>
                            </span>
                            <span tal:define="service context/developpement" tal:condition="service">
                                <span class="fa-stack fa-lg icon">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-code fa-stack-1x fa-inverse"></i>
                                </span>
                            </span>
                            <span tal:define="service context/hebergement" tal:condition="service">
                                <span class="fa-stack fa-lg icon">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-cloud fa-stack-1x fa-inverse"></i>
                                </span>
                            </span>
                            <span tal:define="service context/coaching" tal:condition="service">
                                <span class="fa-stack fa-lg icon">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa graduation-cap fa-stack-1x fa-inverse"></i>
                                </span>
                            </span>
                        </div>
                    </div>
                </section>
            </article>
        </div>
    </body>
</html>
