<html xmlns="http://www.w3.org/1999/xhtml"
      metal:use-macro="here/main_template/macros/master">
  <body>
    <div metal:fill-slot="main">
        <article>
            <header>
                <h2 class="citation" tal:define="testimonial context/testimonial" tal:condition="testimonial" tal:content="testimonial/output">
                    Référence
                </h2>
                <div tal:define="author context/author" tal:condition="author" tal:content="author">
                </div>
            </header>
            <div class="column_60">
                <div class="column_img" tal:attributes="style string:background-image:url(${context/absolute_url}/@@images/capture/large)">
                </div>
                <div class="txt">
                    <h2>A propos du projet</h2>
                    <span tal:replace="structure context/texte/output"/>
                </div>
            </div>
            <div class="column_40 left">
                <div class="icone client">
                    <h2>Le client</h2>
                    <span tal:content="context/nom"></span>
                </div>
                <div class="icone task">
                    <h2>Notre tâche</h2>
                    <span tal:content="context/description"></span>
                </div>
                <div class="icone link">
                    <h2>Leur site web</h2>
                    <a href="" tal:attributes="href context/url" target="_blank">
                        <span tal:content="context/url"></span>
                    </a>
                </div>
                <div>
                    <h2>En chiffre</h2>
                    <div>
                        <h2 tal:content="context/nbr" />
                        <hr>
                        <h2 tal:content="context/type" />
                    </div>
                </div>
                <div>
                    <h2>Services</h2>
                    <div class="icone webdesign" tal:define="service context/webdesign" tal:condition="service">
                    </div>
                    <div class="icone developpement" tal:define="service context/developpement" tal:condition="service">
                    </div>
                    <div class="icone hebergement" tal:define="service context/hebergement" tal:condition="service">
                    </div>
                    <div class="icone coaching" tal:define="service context/coaching" tal:condition="service">
                    </div>
                </div>
            </div>
        </article>
        <div id="clear"></div>
    </div>
  </body>
</html>
