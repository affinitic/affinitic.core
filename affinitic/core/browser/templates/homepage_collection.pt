<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
    <head>
    </head>
    <body>
        <div metal:fill-slot="content-title"> </div>
        <div metal:fill-slot="content-description"> </div>
        <div metal:fill-slot="content-core">
            <div id="homepage_view">
                <div id="shortcut">
                    <a href="#About" class="button"><label>A propos</label></a>
                    <a href="#Services" class="button"><label>Nos services</label></a>
                    <a href="#Number" class="button"><label>Number</label></a>
                    <a href="#OpenSource" class="button"><label>Open source</label></a>
<!--                    <a href="#Team" class="button"><label></label></a>-->
<!--                    <a href="#References" class="button"><label></label></a>-->
                    <a href="#Tools" class="button"><label>Nos outils</label></a>
                    <a href="#Contact" class="button"><label>Contact</label></a>
                    <a href="#Share" class="button"><label>Suivez-nous</label></a>
                </div>
                <div class='parallax'>
                    <tal:block tal:repeat="brain brains" tal:define="brains python: view.getObjectTag('about')">
                    <tal:item define="item brain/getObject; img1 item/background1">
                    <div id="About" class="group">
                        <div class="background" tal:attributes="style string: background-image:url(${item/absolute_url}/@@download/background1/${item/background1/filename})">
                        </div>
                        <div class="foreground">
                            <tal:image tal:define="image nocall:item/image"
                                 tal:condition="nocall:image">
                            <div class="image" tal:attributes="style string: background-image:url(${item/absolute_url}/@@download/image/${image/filename})"></div>
                            </tal:image>
                            <div class="text">
                                <h2 tal:content="item/title_portlet"></h2>
                                <div tal:content="structure item/description_portlet/output"></div>
                                <a class="more" tal:attributes="href string:${item/absolute_url}">
                                    Plus d'infos
                                </a>
                            </div>
                        </div>
                    </div>
                    </tal:item>
                    </tal:block>

                    <div id="Services" class="group">
                        <div class="background">
                        </div>
                        <div class="foreground">
                            <h2>Nos services</h2>
                            <ul>
                            <tal:block tal:repeat="brain brains" tal:define="brains python: view.getObjectTag('service_item')">
                            <li tal:define="size python: (100/len(brains)-1)" tal:attributes="style string: width: ${size}%">
                                <tal:item tal:define="item brain/getObject">
                                <a tal:attributes="href string:${item/absolute_url}">
                                <tal:image tal:define="image nocall:item/image"
                                     tal:condition="nocall:image">
                                <div class="image" tal:attributes="style string: background-image:url(${item/absolute_url}/@@download/image/${image/filename})"></div>
                                </tal:image>
                                <h3 tal:content="item/title_portlet"></h3>
                                <div class="justify">
                                    <span tal:content="structure item/description_portlet/output"></span>
                                </div>
                                </a>
                                </tal:item>
                            </li>
                            </tal:block>
                            </ul>
                        </div>
                    </div>

                    <div id="Number" class="group">
                        <tal:block tal:repeat="brain brains" tal:define="brains python: view.getObjectTag('number_folder')">
                        <tal:item tal:define="item brain/getObject; img1 item/background1; img2 item/background2">
                        <div class="background" tal:attributes="style string: background-image:url(${item/absolute_url}/@@download/background1/${item/background1/filename})">
                            <h2 tal:content="item/title_portlet"></h2>
                            <div tal:content="structure item/description_portlet/output"></div>
                            <ul>
                                <tal:block tal:repeat="brain brains" tal:define="brains python: view.getObjectTag('number_item')">
                                <tal:item tal:define="item brain/getObject">
                                <li class="group_number">
                                    <h2 class="description">
                                        <i tal:attributes="class item/title"></i>
                                    </h2>
                                    <div class="number">
                                        <span tal:content="item/description"></span>
                                    </div>
                                </li>
                                </tal:item>
                                </tal:block>
                            </ul>
                        </div>
                        <div class="foreground" tal:attributes="style string: background-image:url(${item/absolute_url}/@@download/background2/${item/background2/filename})">
                        </div>
                        </tal:item>
                        </tal:block>
                    </div>


                    <tal:block tal:repeat="brain brains" tal:define="brains python: view.getObjectTag('opensource')">
                    <tal:item tal:define="item brain/getObject">
                    <div id="OpenSource" class="group">
                        <div class="foreground">
                            <tal:image tal:define="image nocall:item/image"
                             tal:condition="nocall:image">
                            <div class="image" tal:attributes="style string: background-image:url(${item/absolute_url}/@@download/image/${image/filename})"></div>
                            </tal:image>
                            <h2 tal:content="item/title"></h2>
                            <h5 tal:content="item/title_portlet"></h5>
                            <div tal:content="structure item/description_portlet/output"></div>
                            <a class="more" tal:attributes="href string:${item/absolute_url}">
                                Plus dinfos
                            </a>
                        </div>
                        <div class="background">
                        </div>
                    </div>
                    </tal:item>
                    </tal:block>


<!--                    <div id="Team" class="group">-->
<!--                        <div class="background">-->
<!--                        </div>-->
<!--                        <div class="foreground">-->
<!--                            <h2>Notre équipe</h2>-->
<!--                            <ul>-->
<!--                            <tal:block tal:repeat="brain brains" tal:define="brains python: view.getObjectTag('team_item')">-->
<!--                            </tal:block>-->
<!--                            </ul>-->
<!--                        </div>-->
<!--                    </div>-->


<!--                    <div id="References" class="group">-->
<!--                        <div class="background">-->
<!--                        </div>-->
<!--                        <div class="foreground">-->
<!--                            <h2>Références</h2>-->
<!--                        </div>-->
<!--                    </div>-->


                    <div id="Tools" class="group">
                        <div class="background">
                        </div>
                        <div class="foreground">
                            <div class="slideshow" tal:define="brains python: view.getObjectTag('tools_folder')">
                                <tal:block tal:repeat="brain brains">
                                <div tal:define="item brain/getObject">
                                <h2 tal:content="item/title"></h2>
                                <span tal:content="item/description"></span>
                                </div>
                                </tal:block>
                            </div>
                            <div class="slideshow" tal:define="brains python: view.getObjectTag('tools_item')">
                                <ul id="lightSlider" tal:define="size python: (200*(len(brains)+1))" tal:attributes="style string: width: ${size}px">
                                    <tal:block tal:repeat="brain brains">
                                    <li>
                                        <tal:item tal:define="item brain/getObject">
                                        <tal:image tal:define="image nocall:item/image"
                                    tal:condition="nocall:image">
                                        <div class="image_slider" tal:attributes="style string: background-image:url(${item/absolute_url}/@@download/image/${image/filename})"></div>
                                        </tal:image>
                                        </tal:item>
                                    </li>
                                    </tal:block>
                                </ul>
                            </div>
                        </div>
                    </div>



                    <tal:block tal:repeat="brain brains" tal:define="brains python: view.getObjectType('contact')">
                    <tal:item define="item brain/getObject">
                    <div id="Contact" class="group">
                        <div class="background" tal:attributes="style string: background-image:url(${item/absolute_url}/@@download/background1/${item/background1/filename})">
                        </div>
                        <div class="foreground">
                            <h2 tal:content="item/title_portlet"></h2>
                            <h3 tal:content="structure item/description_portlet/output"></h3>
                            <a class="more" tal:attributes="href string:${item/absolute_url}">
                                Plus dinfos
                            </a>
                        </div>
                    </div>
                    <div id="Share" class="group">
                        <div class="foreground">
                            <h2>Suivez-nous</h2>

                            <ul class="social_share">
                                <li>
                                    <a tal:attributes="href item/facebook" target="_blank" title="Affinitic Facebook">
                                        <i class="fa fa-facebook"></i>
                                    </a>
                                </li>
                                <li>
                                    <a tal:attributes="href item/twitter" target="_blank" title="Affinitic Twitter">
                                        <i class="fa fa-twitter"></i>
                                    </a>
                                </li>
                                <li>
                                    <a tal:attributes="href item/linkedin" target="_blank" title="Affinitic Linkedin">
                                        <i class="fa fa-linkedin"></i>
                                    </a>
                                </li>
                                <li>
                                    <a tal:attributes="href item/github" target="_blank" title="Affinitic Github">
                                        <i class="fa fa-github"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    </tal:item>
                    </tal:block>
                </div>
            </div>
        </div>
    </body>
</html>
