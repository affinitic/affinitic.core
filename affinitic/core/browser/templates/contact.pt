<html xmlns="http://www.w3.org/1999/xhtml"
      metal:use-macro="here/main_template/macros/master">
    <head>
    </head>
    <body>
        <div metal:fill-slot="main" id="view_contact">
            <div id="view_content">
                <div class="parallax">
                    <div class="group_parallax">
                        <div id="contact"></div>
                        <div class="background">
                            <tal:foreground tal:content="structure context/description_portlet/output"></tal:foreground>
                            <div class="map-contact">
                                <a href="#contact" title="Affinitic Contact">
                                    <i class="fa fa-envelope"></i>
                                </a>
                            </div>
                            <div id="map"></div>
                        </div>
                        <div class="foreground">
                            <h1 tal:content="context/title"></h1>
                            <h2 tal:content="context/description"></h2>
                            <div>
                                <a tal:attributes="href string:mailto:${email}" tal:define="email context/email" tal:condition="email" target="_blank">
                                    <span tal:content="context/email"></span>
                                </a>
                            </div>
                            <div>
                                Téléphone :
                                <span tal:content="context/phone"></span>
                            </div>
                            <div>
                                GSM (administratif) :
                                <span tal:content="context/gsm1"></span>
                            </div>
                            <div>
                                GSM (gestion de projet / technique) :
                                <span tal:content="context/gsm2"></span>
                            </div>
                            <div>
                                <span tal:content="context/street"></span>
                                <span tal:content="context/number"></span>
                                <span tal:content="context/box"></span>
                                <br />
                                <span tal:content="context/postalcode"></span>
                                <span tal:content="context/city"></span>
                                <span tal:content="context/country"></span>
                            </div>
                            <div>
                                Numéro d'entreprise :
                                <span tal:content="context/tva"></span>
                            </div>
                            <ul class="social_share">
                                <li>
                                    <a tal:attributes="href context/facebook" target="_blank" title="Affinitic Facebook">
                                        <i class="fa fa-facebook"></i>
                                    </a>
                                </li>
                                <li>
                                    <a tal:attributes="href context/twitter" target="_blank" title="Affinitic Twitter">
                                        <i class="fa fa-twitter"></i>
                                    </a>
                                </li>
                                <li>
                                    <a tal:attributes="href context/linkedin" target="_blank" title="Affinitic Linkedin">
                                        <i class="fa fa-linkedin"></i>
                                    </a>
                                </li>
                                <li>
                                    <a tal:attributes="href context/github" target="_blank" title="Affinitic Github">
                                        <i class="fa fa-github"></i>
                                    </a>
                                </li>
                            </ul>

                            <div class="map-marker">
                                <a href="#map" title="Affinitic Google Map">
                                    <i class="fa fa-map-marker"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
